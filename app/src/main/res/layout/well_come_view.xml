<?xml version="1.0" encoding="utf-8"?>
<merge  xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/boneca"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/txTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageEmpty"
                android:layout_alignRight="@+id/imageEmpty"
                android:textColor="@color/main_green_apptheme"
                android:text="@string/title_well_come"
                android:padding="@dimen/margin"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <com.makeramen.RoundedImageView
                android:id="@+id/imageEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:riv_corner_radius="0dp"
                app:riv_border_width="0dp"
                app:riv_border_color="@color/GalleryGray"
                android:src="@drawable/img_shopping_1"
                android:layout_below="@+id/txTop"/>

            <TextView
                android:id="@+id/txDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageEmpty"
                android:layout_alignRight="@+id/imageEmpty"
                android:layout_below="@+id/imageEmpty"
                android:background="@color/main_green_apptheme"
                android:textColor="@color/White"
                android:padding="@dimen/margin"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/choice_department"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</merge>
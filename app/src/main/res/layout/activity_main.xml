            android:layout_height="fill_parent"
            android:paddingRight="5.0dip"
            android:paddingTop="5.0dip"
            android:layout_weight="3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

